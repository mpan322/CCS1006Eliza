<?xml-model href="./script.xsd"?>
<script>
<keywords>

    <welcomeMsg>Welcome!</welcomeMsg>
    <goodbyeMsg>Bye!</goodbyeMsg>

    <quitKeywords>
        <quitKeyword>quit</quitKeyword>
        <quitKeyword>bye</quitKeyword>
        <quitKeyword>logout</quitKeyword>
    </quitKeywords>

    <keyword word="3" priority="3">
        <decomposition pattern="I feel *">
            <reassembly format="Why do you feel like 1?">
                <postSub>
                    <subRule input="my" replace="your" />
                </postSub>
            </reassembly>
        </decomposition>
        <decomposition pattern="I cant feel *.">
            <reassembly format="When did you first start not being able to feel 1?">
                <postSub>
                    <subRule input="my" replace="your" />
                </postSub>
            </reassembly>
        </decomposition>
    </keyword>


    <keyword word="2" priority="2">
        <decomposition pattern="I feel *">
            <reassembly format="" />
            <reassembly format="">
                <postSub>
                    <subRule input="" replace="" />
                    <subRule input="" replace="" />
                </postSub>
            </reassembly>
        </decomposition>
        <decomposition pattern="">
            <reassembly format="Hello" />
            <reassembly format="">
                <postSub>
                    <subRule input="" replace="" />
                    <subRule input="" replace="" />
                </postSub>
            </reassembly>
        </decomposition>
    </keyword>



    <keyword word=" remember " priority="4">
        <decomposition pattern="I remember $ANY$">
            <reassembly format="What made you think about 1?" />
            <reassembly format="Do you think about 1 often?">
        </decomposition>
        <decomposition pattern="Do you remember $ANY$">
            <reassembly format="I do not, can you tell me about it?" />
        </decomposition>?
    </keyword>

    <keyword word=" want " priority="4">
        <decomposition pattern="I want $ANY$">
            <reassembly format="Why do you want 1?" />
            <reassembly format="What is it abput 1 that makes you want it?">
        </decomposition>
        <decomposition pattern="I do not want $ANY$">
            <reassembly format="Why do you want 1?" />
            <reassembly format="What is it abput 1 that makes you want it?">
        </decomposition>?know
    </keyword>

    <keyword word=" am " priority="4">
        <decomposition pattern="I am $ANY$">
            <reassembly format="Why do you think you are 1?" />
            <reassembly format="When did you start being 1?">
            <reassembly format="How long have you been 1?">
        </decomposition>
    </keyword>

    <keyword word=" was " priority="4">
        <decomposition pattern="I was $ANY$">
            <reassembly format="Why were you 1?" />
            <reassembly format="What made you 1?">
            <reassembly format="When did you start being 1?">

        </decomposition>

        <decomposition pattern="$ANY$ was $ANY2$">
            <reassembly format="Why do you think 1 was 2 ?" />
            <reassembly format="What about 1 made made you believe it was 2?">

        </decomposition>
    </keyword>

    <keyword word=" are " priority="4">
        <decomposition pattern="Are you $ANY$">
            <reassembly format="Yes, what about you ?" />
            <reassembly format="No, what about you??">
        </decomposition>
        <decomposition pattern="You are $ANY$">
            <reassembly format="Why do you think I am 1?" />
            <reassembly format="What makes you think I am 1?">
        </decomposition>
        <decomposition pattern="$ANY$ are $ANY2$">
            <reassembly format="What makes you believe 1 are 2 ?" />
        </decomposition>
    </keyword>

    <keyword word=" is " priority="4">
        <decomposition pattern=" $ANY$ is $ANY2$ ">
            <reassembly format="Why do you think 1 is 2 ?" />
            <reassembly format="?">
        </decomposition>
        <decomposition pattern="I do not want $ANY$">
            <reassembly format="Why do you want 1?" />
            <reassembly format="What is it about 1 that makes you want it?">
        </decomposition>?
    </keyword>

    

    <keyword word=" feel " priority="2">
        <decomposition pattern="I feel $ANY$">
            <reassembly format="" />
            <reassembly format="">
                <postSub>
                    <subRule input="" replace="" />
                    <subRule input="" replace="" />
                </postSub>
            </reassembly>
        </decomposition>
        <decomposition pattern="">
            <reassembly format="Hello" />
            <reassembly format="">
                <postSub>
                    <subRule input=" my " replace=" your " />
                </postSub>
            </reassembly>
        </decomposition>
    </keyword>

    <keyword word=" need " priority="2">
        <decomposition pattern="I need $ANY$">
            <reassembly format="Why do you need 1?" />
            <reassembly format="What about 1 makes you think you need it? ">
                <postSub>
                    <subRule input=" my " replace=" your " />
                </postSub>
            </reassembly>
        </decomposition>
    </keyword>

    <keyword word=" know " priority="2">
        <decomposition pattern="Do you know $ANY%">
            <reassembly format="No, could you tell me more about 1?" />
                <postSub>
                    <subRule input=" my " replace=" your " />
                </postSub>
            </reassembly>
        </decomposition>

        <decomposition pattern="What do you know about $ANY%">
            <reassembly format="Not much, what can you tell me about 1?" />
                <postSub>
                    <subRule input=" my " replace=" your " />
                </postSub>
            </reassembly>
        </decomposition>
    </keyword>

    <keyword word=" hate " priority="2">
        <decomposition pattern="I hate $ANY$">
            <reassembly format="What about 1 makes you hate it?" />
                <postSub>
                    <subRule input=" my " replace=" your " />
                </postSub>
            </reassembly>
        </decomposition>

    <keyword word=" love " priority="2">
        <decomposition pattern="I love $ANY$">
            <reassembly format="What about 1 makes you love it?" />
                <postSub>
                    <subRule input=" my " replace=" your " />
                </postSub>
            </reassembly>
        </decomposition>
    </keyword>





    <keyword word="0" priority="0">
        <decomposition pattern="">
            <reassembly format="Sorry, I am not sure how to respond"></reassembly>
            <reassembly format="Can you please elaborate?"></reassembly>
            <reassembly format="Can you be more specific? "></reassembly>

        </decomposition>
    </keyword>

    </keywords>

    <preSub>
        <subRule input="should" replace="need" />
        <subRule input="must" replace="need" />
        <subRule input="ought" replace="need" />
        <subRule input="an" replace="a" />
        <subRule input="it's" replace="it is" />
        <subRule input="what('*)s" replace="what is" />
        <subRule input="([^\s]*)n't" replace="$1 not" />
        <subRule input="time-out" replace="time out" />
    </preSub>

    <postSub>
        <subRule input="my" replace="your" />
        <subRule input="you" replace="I" />
        <subRule input="your" replace="my" />
        <subRule input="me" replace="you" />
    </postSub>
</script>