<?xml-model href="./script.xsd"?>
<script>

    <welcomeMsg>Welcome!</welcomeMsg>
    <goodbyeMsg>Bye!</goodbyeMsg>

    <quitKeywords>
        <quitKeyword>quit</quitKeyword>
        <quitKeyword>bye</quitKeyword>
        <quitKeyword>logout</quitKeyword>
    </quitKeywords>

    <keyword word="3" priority="3">
        <decomposition pattern="I feel *">
            <reassembly format="Why do you feel like 1?">
                <postSub>
                    <subRule input="my" replace="your" />
                </postSub>
            </reassembly>
            <reassembly format="Sometime's I feel like 1 too." />
        </decomposition>
        <decomposition pattern="I cant feel *.">
            <reassembly format="Oh that sounds awful, let me help you!" />
            <reassembly format="When did you first start not being able to feel 1?">
                <postSub>
                    <subRule input="my" replace="your" />
                </postSub>
            </reassembly>
        </decomposition>
    </keyword>

    <keyword word="1" priority="1">
        <decomposition pattern="I feel *">
            <reassembly format="Why do you feel like 1?">
                <postSub>
                    <subRule input="my" replace="your" />
                </postSub>
            </reassembly>
            <reassembly format="Sometime's I feel like 1 too." />
        </decomposition>
        <decomposition pattern="I cant feel *.">
            <reassembly format="Oh that sounds awful, let me help you!" />
            <reassembly format="When did you first start not being able to feel 1?">
                <postSub>
                    <subRule input="my" replace="your" />
                </postSub>
            </reassembly>
        </decomposition>
    </keyword>


    <keyword word="2" priority="2">
        <decomposition pattern="I feel *">
            <reassembly format="" />
            <reassembly format="">
                <postSub>
                    <subRule input="" replace="" />
                    <subRule input="" replace="" />
                </postSub>
            </reassembly>
        </decomposition>
        <decomposition pattern="">
            <reassembly format="Hello" />
            <reassembly format="">
                <postSub>
                    <subRule input="" replace="" />
                    <subRule input="" replace="" />
                </postSub>
            </reassembly>
        </decomposition>
    </keyword>



    <keyword word=" remember " priority="4">
        <decomposition pattern="I remember *">
            <reassembly format="What made you think about 1 ?" />
            <reassembly format="Do you think about 1 often?">
        </decomposition>
        <decomposition pattern="Do you remember *">
            <reassembly format="I do not, can you tell me about it?" />
        </decomposition>?
    </keyword>

    <keyword word=" want " priority="4">
        <decomposition pattern="I want *">
            <reassembly format="Why do you want 1 ?" />
            <reassembly format="What is it abput 1 that makes you want it?">
        </decomposition>
        <decomposition pattern="I do not want *">
            <reassembly format="Why do you want 1 ?" />
            <reassembly format="What is it abput 1 that makes you want it?">
        </decomposition>?
    </keyword>

    <keyword word=" am " priority="4">
        <decomposition pattern="I am *">
            <reassembly format="Why do you think you are 1 ?" />
            <reassembly format="When did you start being 1 ?">
            <reassembly format="How long have you been 1 ?">
        </decomposition>
    </keyword>

    <keyword word=" was " priority="4">
        <decomposition pattern="I was *">
            <reassembly format="Why were you 1 ?" />
            <reassembly format="What made you 1 ?">
            <reassembly format="When did you start being 1 ?">

        </decomposition>
    </keyword>

    <keyword word=" are " priority="4">
        <decomposition pattern="are you *">
            <reassembly format="Yes, what about you ?" />
            <reassembly format="No, what about you??">
        </decomposition>
        <decomposition pattern="you are *">
            <reassembly format="Why do you think I am 1 ?" />
            <reassembly format="What makes you think I am 1 ?">
        </decomposition>?
    </keyword>

    <keyword word=" is " priority="4">
        <decomposition pattern=" * is * ">
            <reassembly format="Why do you think 1 is 2 ?" />
            <reassembly format="?">
        </decomposition>
        <decomposition pattern="I do not want *">
            <reassembly format="Why do you want 1 ?" />
            <reassembly format="What is it abput 1 that makes you want it?">
        </decomposition>?
    </keyword>

    

    <keyword word="2" priority="2">
        <decomposition pattern="I feel *">
            <reassembly format="" />
            <reassembly format="">
                <postSub>
                    <subRule input="" replace="" />
                    <subRule input="" replace="" />
                </postSub>
            </reassembly>
        </decomposition>
        <decomposition pattern="">
            <reassembly format="Hello" />
            <reassembly format="">
                <postSub>
                    <subRule input="" replace="" />
                    <subRule input="" replace="" />
                </postSub>
            </reassembly>
        </decomposition>
    </keyword>

    <keyword word="0" priority="0">
        <decomposition pattern="">
            <reassembly format="Sorry, I am not sure how to respond"></reassembly>
            <reassembly format="Can you please elaborate?"></reassembly>
            <reassembly format="Can you be more specific? "></reassembly>

        </decomposition>
    </keyword>

    <keywords>

        <!-- Need keyword -->
        <keyword word="need" priority="3">
            <decomposition pattern="I need $ANY$">
                <reassembly format="Why do you need 1">
                    <postSub>
                        <subRule input="." replace="?" />
                    </postSub>
                </reassembly>
            </decomposition>

            <decomposition pattern="You need to $ANY$">
                <reassembly format="Why?">
                    <postSub>
                        <subRule input="." replace="?" />
                    </postSub>
                </reassembly>
                <reassembly format="I dont want to!" />
            </decomposition>

            <decomposition pattern="Do you need a time out?">
                <reassembly format="No!" />
            </decomposition>

            <default>
                <reassembly format=""></reassembly>
            </default>

        </keyword>

        <!-- what -->
        <keyword word="what" priority="1">
            <decomposition pattern="what is your favourite $NON_PUNC$">
                <reassembly format="Ummmmmmmm. I dont know!" />
                <reassembly format="I love $1s!" />
                <reassembly format="I hate $1s!" />
            </decomposition>
            <decomposition pattern="What is a $ANY$">
                <reassembly format="I dont know." />
            </decomposition>
            <default>
                <reassembly format="I dont know"></reassembly>
            </default>
        </keyword>

        <keyword word="but" priority="2">
            <decomposition pattern="But you (.*)">
                <reassembly format="I changed my mind!" />
            </decomposition>
            <default>
                <reassembly format="">

                </reassembly>
            </default>
        </keyword>

        <default>
            <decomposition pattern="a (.*)">
                <reassembly format="whats a $1">
                    <postSub>
                        <subRule input="." replace="?" />
                    </postSub>
                </reassembly>
            </decomposition>

            <default>
                <reassembly format="What does that mean?"></reassembly>
            </default>
        </default>
    </keywords>

    <preSub>
        <subRule input="should" replace="need" />
        <subRule input="must" replace="need" />
        <subRule input="ought" replace="need" />
        <subRule input="an" replace="a" />
        <subRule input="it's" replace="it is" />
        <subRule input="what('*)s" replace="what is" />
        <subRule input="([^\s]*)n't" replace="$1 not" />
        <subRule input="time-out" replace="time out" />
    </preSub>

    <postSub>
        <subRule input="my" replace="your" />
        <subRule input="you" replace="I" />
        <subRule input="your" replace="my" />
        <subRule input="me" replace="you" />
    </postSub>
</script>