<?xml-model href="./script.xsd"?>
<script>
    <welcomeMsg>WELCOME</welcomeMsg>
    <goodbyeMsg>GOODBYE</goodbyeMsg>
    <quitKeywords>
        <quitKeyword>QUIT</quitKeyword>
    </quitKeywords>
    <keywords>
        <keyword word="test1-regex" priority="1">
            <decomposition pattern="$NEXT_WORD$ is $ANY$">
                <reassembly format="$1 dual regex replace $2">
                    <postSub>
                        <subRule input="" replace="" />
                    </postSub>
                </reassembly>
            </decomposition>
            <default>
                <reassembly format="test1=regex occur">
                    <postSub>
                        <subRule input="" replace="" />
                    </postSub>
                </reassembly>
            </default>
        </keyword>

        <keyword word="test2postSub" priority="2">
            <decomposition pattern="$ANY$">
                <reassembly format="If post sub is working the following will be 'apple banana pear': 'replace1 replace2 replace3'">
                    <postSub>
                        <subRule input="replace1" replace="apple" />
                        <subRule input="replace2" replace="banana" />
                        <subRule input="replace3" replace="pear" />
                    </postSub>
                </reassembly>
            </decomposition>
            <default>
                <reassembly format="test2-occur">
                    <postSub>
                        <subRule input="" replace="" />
                    </postSub>
                </reassembly>
            </default>
        </keyword>
        <default>
            <decomposition pattern="$ANY$">
                <reassembly format="no test matched">
                    <postSub>
                        <subRule input="" replace="" />
                    </postSub>
                </reassembly>
            </decomposition>
            <default>
                <reassembly format="DEAFULT WORKING">
                    <postSub>
                        <subRule input="" replace="" />
                    </postSub>
                </reassembly>
            </default>
        </default>
    </keywords>
    <preSub>
        <subRule input="" replace="" />
    </preSub>
    <postSub>
        <subRule input="" replace="" />
    </postSub>
</script>